{
  "name": "bob-empire",
  "version": "2.2.0",
  "description": "Global AI-Powered Commerce Platform",
  "main": "server.js",
  "keywords": [
    "ai",
    "commerce",
    "global",
    "platform",
    "ecommerce",
    "chatbot"
  ],
  "author": "Bob Empire Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:icons && npm run build:optimize",
    "build:icons": "echo 'Icons already generated'",
    "build:optimize": "npm run minify:css && npm run minify:js",
    "minify:css": "npx cleancss -o style.min.css style.css",
    "minify:js": "npx uglifyjs main.js -c -m -o main.min.js",
    "test": "node test.js",
    "prod": "NODE_ENV=production npm start",
    "health": "curl -f http://localhost:3000/api/ai -X POST -H 'Content-Type: application/json' -d '{\"message\":\"health check\"}' || exit 1",
    "deploy:vercel": "vercel --prod",
    "deploy:heroku": "git push heroku main"
  }
}
