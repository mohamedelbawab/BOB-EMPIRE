{
  "name": "bob-empire",
  "version": "2.0.0",
  "description": "Global AI-Powered Commerce Platform - Multi-Platform Solution",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamedelbawab/BOB-EMPIRE.git"
  },
  "author": "Bob Empire Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "openai": "^4.20.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:concurrent": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "echo 'Web build completed'",
    "build:electron": "electron-builder",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "electron:build": "electron-builder --publish=never",
    "dist": "electron-builder --publish=always",
    "test": "echo 'Tests will be added in future versions'",
    "lint": "echo 'Linting will be added in future versions'"
  },
  "build": {
    "appId": "com.bobempire.app",
    "productName": "Bob Empire",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!android/**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
